<div class="centered-container">
  <div class="card">
    <h2>Log in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email", class: "form-control" }, label: "Email" %>
        <%= f.input :password, required: true, input_html: { autocomplete: "current-password", class: "form-control" }, label: "Password" %>
        <%= f.input :remember_me, as: :boolean, label: "Remember me", input_html: { class: "form-checkbox" } if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn-submit" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
