<h1>List of Exotic Pets</h1>

<div class="container">


        <div class="content-container">
          <div class="overlay-text">
            <h1>Our Exotic Pets Collection</h1>
            <p>Discover unique companions waiting for their next adventure</p>
          </div>

          <div class="pets-container">
            <div class="cards">
              <!-- Only one iteration loop over exotic_pets -->
              <% @exotic_pets.each do |exotic_pet| %>
                <div class="card-trip">
                  <%= link_to exotic_pet_path(exotic_pet), class: "price-btn-link" do %>
                    <div class="card-trip-img-wrapper">
                      <%= cl_image_tag exotic_pet.photos.first.key, class: "card-trip-img" %>
                    </div>

                    <div class="card-trip-infos">
                      <div class="card-recipe-description">
                        <h2><%= exotic_pet.name %></h2>
                        <p><%= exotic_pet.description %></p>
                      </div>

                      <button class="price-btn">Â£<%= exotic_pet.price_per_day %> per day</button>
                    </div>
                  <% end %> <!-- End of link_to block -->
                </div>
                <% end %>
            </div>
          </div>
        </div>

</div> <!-- End of container div -->
