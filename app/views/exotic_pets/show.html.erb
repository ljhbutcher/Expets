<div class="container">
  <div class="image-section">
    <div class="main-image">
      <img src="<%= @exotic_pet.image_url %>" alt="<%= @exotic_pet.name %>" />
    </div>
    <div class="additional-images">
      <img src="<%= @exotic_pet.image_url %>" alt="<%= @exotic_pet.name %> Image 1" />
      <img src="<%= @exotic_pet.image_url %>" alt="<%= @exotic_pet.name %> Image 2" />
    </div>
  </div>

<ul>
  <li><%= @exotic_pet.name %></li>
  <li><%= @exotic_pet.age %></li>
  <li><%= @exotic_pet.description %></li>
  <li><%= cl_image_tag @exotic_pet.image_url %></li>
</ul>
  <div class="details-section">
    <h2><%= @exotic_pet.name.upcase %></h2>
    <p class="rating">★★★★★</p>
    <p class="description">
      <%= @exotic_pet.description %>
    </p>
    <p class="age">Age: <%= @exotic_pet.age %> years</p>
    <button class="book-button">BOOK</button>
  </div>

  <div class="reviews-section">
    <h3>REVIEWS</h3>
    <p>Customer reviews</p>
  </div>
</div>
