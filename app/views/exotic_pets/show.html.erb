<div class="show-container">

      <div class="column">
        <section class="image-gallery">
          <% @exotic_pet.photos.each do |photo| %>
          <%= cl_image_tag photo.key, height: 400, width: 400, crop: :fill %>
          <% end %>
        </section>
      </div>

      <div class="column">
        <header>
          <h1><%= @exotic_pet.name.upcase %></h1>
          <span class="rating"><%= @exotic_pet.ratings > 0 ? " #{'⭐' * @exotic_pet.ratings}" : "🌞"%></span>
        </header>

        <hr>

        <div style="width: 640px; height: 400px;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAP_BOX_API_KEY'] %>">
        </div>

            <br>

        <section class="description">
          <h3><%= @exotic_pet.description %></h3>
          <h3>Age: <%= @exotic_pet.age %> years</h3>

          <br>

          <%= link_to "Book", new_exotic_pet_booking_path(@exotic_pet), class: "price-btn" %>
        </section>

            <hr>

          <section class="reviews">
          <h2>Reviews</h2>
            <ul class="reviews">
              <% @exotic_pet.reviews.each do |review| %>
              <%= " #{review.user.username} said '#{review.comment}' | #{'⭐️' * review.rating}"  %><br>
              <% end %>
            </ul>

          <hr>

          </section>

          <!-- Add Review Form -->
          <div class="add-review">

            <h3>Add a Review</h3>
            <%= form_with(model: [@exotic_pet, @exotic_pet.reviews.build], local: true) do |form| %>
              <div class="field">
                <%= form.label :rating %>
                <%= form.select :rating, options_for_select(1..5), {}, class: "form-control" %>
              </div>
              <div class="field">
                <%= form.label :comment %>
                <%= form.text_area :comment, class: "form-control" %>
              </div>
              <br>
              <div class="actions">
                <%= form.submit "Submit Review", class: "price-btn" %>
              </div>
            <% end %>
          </div>
      </div>

</div>
