<div class="container">
  <div class="image-section">
    <div class="main-image">
      <%= image_tag @exotic_pet.image_url, alt: @exotic_pet.name %>
    </div>
    <div class="additional-images">
      <%= image_tag @exotic_pet.image_url, alt: "#{@exotic_pet.name} Image 1" %>
      <%= image_tag @exotic_pet.image_url, alt: "#{@exotic_pet.name} Image 2" %>
    </div>
  </div>

  <div class="details-section">
    <h2><%= @exotic_pet.name.upcase %></h2>
    <p class="rating">★★★★★</p>
    <p class="description">
      <%= @exotic_pet.description %>
    </p>
    <p class="age">Age: <%= @exotic_pet.age %> years</p>
    <%= link_to "BOOK", new_exotic_pet_booking_path(@exotic_pet), class: "book-button" %>
  </div>

  <div class="reviews-section">
    <h3>REVIEWS</h3>
    <p>Customer reviews will go here.</p>
  </div>
</div>
