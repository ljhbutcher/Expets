<div class="image-container">
  <%= image_tag("https://cdn.midjourney.com/2698ef4a-57a5-41c2-a04c-377d53ec533a/0_1.png", class: "full-page-image", alt: "Background Image") %>
</div>

<div class="bookings-container">
  <h1 class="header"><strong>My Bookings</strong></h1>
  <div class="bookings-list">
    <% @bookings.each do |booking| %>
      <div class="booking-card">
        <div class="booking-card-left">
          <%= cl_image_tag(booking.exotic_pet.photos.first.key, width: 300, height: 200, class: "booking-image") %>
        </div>
        <div class="booking-card-right">
          <h3><%= link_to booking.exotic_pet.name, booking.exotic_pet, class: "pet-name" %></h3>
          <p><strong>Start Date:</strong> <%= booking.start_date %></p>
          <p><strong>End Date:</strong> <%= booking.end_date %></p>
          <p><strong>Event Details:</strong> <%= booking.event_details %></p>
          <p><strong>Contact Email:</strong> <%= booking.contact_email %></p>
          <p><strong>Contact Number:</strong> <%= booking.contact_phone %></p>
          <%= button_to "Delete Booking", booking_path(booking), method: :delete, data: { confirm: "Are you sure?", turbo: false }, class: "btn-delete" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
