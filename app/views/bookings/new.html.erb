<div class="container">
  <h2>Book <%= @exotic_pet.name %></h2>

  <%= form_with model: [@exotic_pet, @booking], local: true do |f| %>
    <div class="form-group">
      <%= f.label :start_date, "Start of Rental" %>
      <%= f.datetime_select :start_date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :end_date, "End of Rental" %>
      <%= f.datetime_select :end_date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :event_details, "Event Details" %>
      <%= f.text_area :event_details, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :contact_email, "ðŸ“§ Contact Email" %>
      <%= f.email_field :contact_email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :contact_phone, "ðŸ“ž Contact Phone" %>
      <%= f.telephone_field :contact_phone, class: "form-control" %>
    </div>

    <%= f.submit "Submit Booking", class: "btn btn-primary" %>
  <% end %>
</div>
